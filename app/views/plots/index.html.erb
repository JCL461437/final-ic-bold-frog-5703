<h1>Plots Index</h1>

<% @plots.each do |plot| %>
  <div id="plot_<%= plot.id %>">
    <h3>Plot Number: <%= plot.number %></h3>
    <ul>
      <% plot.plants.each do |plant| %>
        <li id="plant_<%= plant.id %>">
          <%= plant.name %>
          <%= button_to 'Remove', plot_plant_plot_path(plot, plant), method: :delete, data: { confirm: 'Are you sure?' } %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>